Random r = new Random

int a = r.Next (100);

int b = r.next (100);


while(a!=b){

	if (a>b){
	console.Writeline ("o numero secreto é menor");
		b = r.next(b++,a);
}
	if (a<b){
	console.Writeline ("o numero secreto é maior");
		b = r.next(a,b--);
}

	if (a=b){
	console.Writeline ("acertou");

}



}
